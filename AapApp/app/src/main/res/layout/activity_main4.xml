<?xml version="1.0" encoding="utf-8"?>

   <RelativeLayout
       xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
       android:id="@+id/activity_main4"
       android:paddingBottom="@dimen/activity_vertical_margin"
       android:paddingLeft="@dimen/activity_horizontal_margin"
       android:paddingRight="@dimen/activity_horizontal_margin"
       android:fillViewport="true"
      >
    <TextView
        android:text="PROFILE"
        android:textSize="24sp"
        android:textStyle="bold"
        android:background="@color/colorPrimary"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_marginTop="12dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="REMOVE"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button6"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:scrollbars="vertical"
        android:layout_below="@+id/textView2"
        android:layout_above="@+id/sendFire"
        android:layout_height="match_parent"
       >
        <LinearLayout
            android:layout_width="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_height="wrap_content"
            >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_gravity="bottom">
        <TextView
            android:text="PC"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"
            android:layout_alignBottom="@+id/spinpc"
            android:layout_alignTop="@+id/spinpc"
            android:layout_toLeftOf="@+id/spinpc"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="LA"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:layout_alignBottom="@+id/spinla"
            android:layout_alignTop="@+id/spinla"
            android:layout_toLeftOf="@+id/spinla"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
            <TextView
                android:text="SECTOR"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                android:layout_alignTop="@+id/spinpan_mun"
                android:layout_alignBottom="@+id/spinpan_mun"
                android:layout_toLeftOf="@+id/spinla"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />


        <RadioButton
            android:text="MALE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/editText"
            android:layout_alignTop="@+id/radioButton2" />

            <TextView
            android:text="BOOTH"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/editText2"
            android:id="@+id/textView6"
            android:layout_alignTop="@+id/editText2"
            android:layout_toLeftOf="@+id/editText2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="WARD"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/editText2"
            android:id="@+id/textView10"
            android:layout_alignTop="@+id/editText"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/editText"
            android:layout_toStartOf="@+id/editText" />

            <TextView
         android:text="GENDER"
         android:gravity="center"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_above="@+id/textView10"
         android:id="@+id/textView9"
         android:layout_alignTop="@+id/radioButton"
         android:layout_toLeftOf="@+id/editText"
         android:layout_alignParentLeft="true"
         android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="7"
            android:gravity="center"
            android:textSize="14sp"
            android:id="@+id/pincode"
            android:hint="ENTER PINCODE"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_above="@+id/textView9"
            android:layout_toStartOf="@+id/radioButton"
            android:layout_toLeftOf="@+id/radioButton"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />



        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinpan_mun"
            android:gravity="center"
            android:layout_above="@+id/pincode"
            android:windowSoftInputMode="stateHidden"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignLeft="@+id/spinla"
            android:layout_alignStart="@+id/spinla" />

        <TextView
            android:text="DISTRICT"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:gravity="center"
            android:layout_alignTop="@+id/spindistrict"
            android:layout_above="@+id/textView8"
            android:layout_toLeftOf="@+id/spinpc"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:gravity="center"
            android:ems="10"
            android:id="@+id/editText"
            android:layout_above="@+id/editText2"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <AutoCompleteTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinpc"
            android:gravity="center"
            android:windowSoftInputMode="stateHidden"
            android:layout_above="@+id/textView7"
            android:layout_alignLeft="@+id/spindistrict"
            android:layout_alignStart="@+id/spindistrict"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

            <AutoCompleteTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/spindistrict"
                android:windowSoftInputMode="stateHidden"
            android:layout_above="@+id/textView8"
                android:layout_toRightOf="@+id/textView9"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"

                android:gravity="center"
                android:ems="10"
                android:id="@+id/editText2"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:gravity="center"
                android:hint="ENTER PHONE NUMBER"
                android:id="@+id/phoneNum"
                android:layout_above="@+id/editName"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:windowSoftInputMode="stateHidden"
                android:id="@+id/spinla"
                android:layout_above="@+id/spinpan_mun"
                android:layout_toRightOf="@+id/textView8"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <RadioButton
                android:text="FEMALE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton2"
                android:layout_above="@+id/editText"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="22dp"
                android:layout_marginEnd="22dp" />

            <EditText
            android:layout_width="match_parent"
            android:gravity="center"
            android:hint="ENTER NAME"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editName"
                android:layout_marginBottom="15dp"
                android:layout_above="@+id/textView3"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

        </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:text="SAVE"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sendFire"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/button8"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="CALL"
        android:textColor="#ffffff"
        android:visibility="gone"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button6"
        android:id="@+id/button8"
        android:layout_toRightOf="@+id/button6" />

</RelativeLayout>